{% extends 'base_admin.html.twig' %}
{% block body %}
    <div class="page">
        {% include '/admin/sidebar.html.twig' %}

        <div class="page-wrapper">
            <div class="page-header d-print-none">
                <div class="container-xl">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <h2 class="page-title">
                                Utilisateurs
                            </h2>
                        </div>

                        <!-- Page title actions -->
                        <div class="col-auto ms-auto d-print-none">
                                <a href="{{ path('app_users_new') }}" class="btn btn-primary d-none d-sm-inline-block" >
                                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg>
                                    Ajouter
                                </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-cards">
                <div class="page-body">
                    <div class="container-xl">
                        <div class="row row-cards">
                            <div class="col-lg-8">
                                <div class="card">
                                    <div class="table-responsive">
                                        <table class="table table-vcenter card-table">
                                            <thead>
                                            <tr>
                                                <th>Nom</th>
                                                <th>Email</th>
                                                <th>Date de cr√©ation</th>
                                                <th>Role</th>
                                                <th class="w-1"></th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for u in users %}
                                            <tr>
                                                <td>{{ u.name  }}</td>
                                                <td class="text-muted">
                                                    {{ u.email }}
                                                </td>
                                                <td class="text-muted">{{ u.createdAt|date('d/m/Y')}} </td>
                                                <td class="text-muted">
                                                    Admin
                                                </td>
                                                <td>
                                                    <a href="#">Edit</a>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h3 class="card-title">Stats</h3>
                                        <table class="table table-sm table-borderless">
                                            <thead>
                                            <tr>
                                                <th>Page</th>
                                                <th class="text-end">Visitors</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>
                                                <td>
                                                    <div class="progressbg">
                                                        <div class="progress progressbg-progress">
                                                            <div class="progress-bar bg-primary-lt"
                                                                 style="width: 82.54%" role="progressbar"
                                                                 aria-valuenow="82.54" aria-valuemin="0"
                                                                 aria-valuemax="100" aria-label="82.54% Complete">
                                                                <span class="visually-hidden">82.54% Complete</span>
                                                            </div>
                                                        </div>
                                                        <div class="progressbg-text">Admins</div>
                                                    </div>
                                                </td>
                                                <td class="w-1 fw-bold text-end">{{ users|length }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
